<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".UpdateActivity">

    <Button
        android:id="@+id/btnCreate_add"
        android:layout_width="341dp"
        android:layout_height="52dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/btn_login"
        android:fontFamily="@font/roboto_medium"
        android:text="Create"
        android:textSize="24sp"
        app:backgroundTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDepart_update" />

    <Button
        android:id="@+id/btnBack_add"
        android:layout_width="341dp"
        android:layout_height="52dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/btn_login"
        android:fontFamily="@font/roboto_medium"
        android:text="BACK"
        android:textSize="24sp"
        app:backgroundTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCreate_add" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="329dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="ADD EMPLOYEE"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tvName_add"
        android:layout_width="321dp"
        android:layout_height="59dp"
        android:layout_marginTop="104dp"
        android:background="@drawable/rectangle"
        android:drawableLeft="@drawable/human"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:paddingLeft="50px"
        android:textColorHint="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/tvAge_add"
        android:layout_width="321dp"
        android:layout_height="59dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/rectangle"
        android:drawableLeft="@drawable/question"
        android:ems="10"
        android:hint="Age"
        android:inputType="textPersonName"
        android:paddingLeft="50px"
        android:textColorHint="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName_add" />

    <EditText
        android:id="@+id/tvDepart_update"
        android:layout_width="321dp"
        android:layout_height="59dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rectangle"
        android:drawableLeft="@drawable/depart"
        android:ems="10"
        android:hint="Department"
        android:inputType="textPersonName"
        android:paddingLeft="50px"
        android:textColorHint="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAge_add" />
</androidx.constraintlayout.widget.ConstraintLayout>